{
  "$schema": "interface.schema.json",
  "jsonrpc": "2.0",
  "info": {
    "title": "Display Info API",
    "class": "DisplayInfo",
    "description": "DisplayInfo JSON-RPC interface"
  },
  "properties": {
    "displayinfo": {
      "summary": "Display general information",
      "readonly": true,
      "params": {
        "type": "object",
        "properties": {
          "firmwareversion": {
            "description": "Version of the device firmware",
            "example": "1.0.0",
            "type": "string"
          },
          "chipset": {
            "description": "Chipset used for this device",
            "example": "BCM2711",
            "type": "string"
          },
          "totalgpuram": {
            "description": "Total GPU DRAM memory (in bytes)",
            "example": 381681664,
            "type": "number",
            "size": 64
          },
          "freegpuram": {
            "description": "Free GPU DRAM memory (in bytes)",
            "example": 358612992,
            "type": "number",
            "size": 64
          },
          "audiopassthrough": {
            "description": "Audio Pass through is support for this device",
            "type": "boolean",
            "example": false
          },
          "connected": {
            "description": "HDMI display connection status",
            "type": "boolean",
            "example": true
          },
          "width": {
            "description": "Width of the connected HDMI display",
            "type": "number",
            "size": 32,
            "example": 1280
          },
          "height": {
            "description": "Height of the connected HDMI display",
            "type": "number",
            "size": 32,
            "example": 720
          },
          "hdcpmajor": {
            "description": "Major version of the HDCP supported by the device",
            "type": "number",
            "size": 8,
            "example": 2
          },
          "hdcpminor": {
            "description": "Minor version of the HDCP supported by the device",
            "type": "number",
            "size": 8,
            "example": 2
          },
          "hdrtype": {
            "description": "HDR Type used",
            "type": "string",
            "enum": [ "HDROff", "HDR10", "HDR10Plus", "HDRDolbyVision", "HDRTechnicolor" ],
            "example": "HDROff"
          }
        },
        "required": [
          "firmwareversion",
          "chipset",
          "totalgpuram",
          "freegpuram",
          "audiopassthrough",
          "connected",
          "width",
          "height",
          "hdcpmajor",
          "hdcpminor",
          "hdrtype"
        ]
      }
    }
  }
}
