{
  "$schema": "interface.schema.json",
  "jsonrpc": "2.0",
  "info": {
    "title": "Network Control API",
    "class": "NetworkControl",
    "description": "Network Control JSON-RPC interface"
  },
  "common": {
    "$ref": "common.json"
  },
  "methods": {
    "reload": {
      "summary": "Reloads a static and non-static network interface adapter",
      "params": {
        "type": "object",
        "properties": {
          "device": {
            "description": "Network interface",
            "type": "string",
            "example": "eth0"
          }
        }
      },
      "result": {
        "$ref": "#/common/results/void"
      },
      "errors": [
        {
          "description": "Unavailable network interface",
          "$ref": "#/common/errors/unavailable"
        }
      ]
    },
    "request": {
      "events": [
        "connectionstatus"
      ],
      "summary": "Reloads a non-static network interface adapter",
      "params": {
        "type": "object",
        "properties": {
          "device": {
            "description": "Network interface",
            "type": "string",
            "example": "eth0"
          }
        }
      },
      "result": {
        "$ref": "#/common/results/void"
      },
      "errors": [
        {
          "description": "Unavaliable network interface",
          "$ref": "#/common/errors/unavailable"
        }
      ]
    },
    "assign": {
      "summary": "Reloads a static network interface adapter",
      "params": {
        "type": "object",
        "properties": {
          "device": {
            "description": "Network interface",
            "type": "string",
            "example": "eth0"
          }
        }
      },
      "result": {
        "$ref": "#/common/results/void"
      },
      "errors": [
        {
          "description": "Unavaliable network interface",
          "$ref": "#/common/errors/unavailable"
        }
      ]
    },
    "flush": {
      "summary": "Flushes a network interface adapter",
      "params": {
        "type": "object",
        "properties": {
          "device": {
            "description": "Network interface",
            "type": "string",
            "example": "eth0"
          }
        }
      },
      "result": {
        "$ref": "#/common/results/void"
      },
      "errors": [
        {
          "description": "Unavaliable network interface",
          "$ref": "#/common/errors/unavailable"
        }
      ]
    }
  },
  "properties": {
    "network": {
      "summary": "Current network information",
      "readonly": true,
      "params": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "interface": {
              "description": "Interface name",
              "type": "string",
              "example": "eth0"
            },
            "mode": {
              "description": "Mode",
              "type": "string",
              "enum": [
                "Manual",
                "Static",
                "Dynamic"
              ],
              "enumtyped": false,
              "example": "dynamic"
            },
            "address": {
              "description": "IP address",
              "type": "string",
              "example": "192.168.1.158"
            },
            "mask": {
              "description": "Network interface mask",
              "type": "number",
              "size": 8,
              "example": "24"
            },
            "gateway": {
              "description": "Gateway address",
              "type": "string",
              "example": "192.168.1.1"
            },
            "broadcast": {
              "description": "Broadcast IP",
              "type": "string",
              "example": "192.168.1.255"
            }
          }
        }
      },
      "index": {
        "name": "Interface",
        "description": "If network interface is not given, all network interfaces are returned.",
        "example": "eth0"
      },
      "errors": [
        {
          "description": "Unavailable network interface",
          "$ref": "#/common/errors/unavailable"
        }
      ]
    },
    "up": {
      "summary": "Interface up status",
      "params": {
        "type": "boolean"
      },
      "index": {
        "name": "Interface",
        "example": "eth0"
      },
      "result": {
        "$ref": "#/common/results/void"
      },
      "errors": [
        {
          "description": "Unavailable network interface",
          "$ref": "#/common/errors/unavailable"
        }
      ]
    }
  },
  "events": {
    "connectionstatus": {
      "summary": "Notifies about connection status (connected or connectionfailed)",
      "params": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of network interface",
            "example": "eth0"
          },
          "address": {
            "type": "string",
            "description": "IP Address of network interface",
            "example": "192.168.1.10"
          },
          "status": {
            "type": "string",
            "enum": [
                "connected",
                "connectionfailed"
              ],
            "description": "Status of the interface, connected or not",
            "example": "connected"
          }
        },
        "required": [
          "name",
          "address",
          "status"
        ]
      }
    }
  }
}
