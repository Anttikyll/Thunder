{
  "$schema": "plugin.schema.json",
  "jsonrpc": "2.0",

  "info": {
    "title": "Remote Control Plugin",
    "class": "RemoteControl",
    "description": [
      "This document describes the RemoteControl plugin's JSON-RPC interface.",
      "The RemoteControl plugin enables to control RC functionality."
    ],
    "version": "1.0"
  },

  "definitions": {
      "rcinfo": {
        "device": {
          "description": "Device name",
          "type": "string",
          "default": "DevInput"
        },
        "code": {
          "description": "Key code",
          "type": "number",
          "default": 1
        },
        "key": {
          "description": "Key ingest code",
          "type": "number",
          "size": 16,
          "default": 103
        },
        "modifiers": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["leftshift", "rightshift", "leftalt", "rightalt", "leftctrl", "rightctrl"], 
            "enumvalues": [1, 2, 4, 8, 16, 32],
            "description": "Key modifiers",
            "default": "leftshift"
          }
        }
      }
    },

  "methods": {

    "RemoteControl.1.devices": {
      "summary": "General information.",
      "description": "Retrieves the names of all available devices.",
      "tags": ["RemoteControl"],
      "result": {
        "type": "array",
        "items": {
          "type" : "string",
          "description": "Avaliable device name",
          "default": "Web"
        }
      }
    },

    "RemoteControl.1.device": {
      "summary": "Get device.",
      "description": "Retrieves the metadata of specific devices.",
      "tags": ["RemoteControl"],
      "params": {
        "type": "object",
        "properties": {
          "device": {
            "description": "Device name",
            "type": "string",
            "default": "DevInput"
          }
        }
      },
      "result": {
        "type": "object",
        "properties": {
          "name": {
            "description": "Device name",
            "type": "string",
            "default": "DevInput"
          },
          "metadata": {
            "description": "Device metadata",
            "type": "string",
            "default": "It is based on protocol A"
          }
        }
      },
      "errors": [
        {
          "description": "Virtual device is loaded",
          "$ref": "errors.json#/errors/general"
        },
        {
          "description": "Unknown device",
          "$ref": "errors.json#/errors/unavailable"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "errors.json#/errors/badrequest"
        }
      ]
    },

    "RemoteControl.1.key": {
      "summary": "Key action.",
      "description": "Retrieves the key code details.",
      "tags": ["RemoteControl"],
      "params": {
        "type": "object",
        "properties": {
          "device": {
            "description": "Device name",
            "type": "string",
            "default": "DevInput"
          },
          "code": {
            "description": "Key code",
            "type": "number",
            "default": 1
          }
        }
      },
      "result": {
        "type": "object",
        "properties": {
          "code": {
            "description": "Key code",
            "type": "number",
            "default": 1
          },
          "key": {
            "description": "Key ingest code",
            "type": "number",
            "size": 16,
            "default": 103
          },
          "modifiers": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["leftshift", "rightshift", "leftalt", "rightalt", "leftctrl", "rightctrl"], 
              "enumvalues": [1, 2, 4, 8, 16, 32],
              "description": "Key modifiers",
              "default": "leftshift"
            }
          }
        }
      },
      "errors": [
        {
          "description": "Key does not exist",
          "$ref": "errors.json#/errors/unknownkey"
        },
        {
          "description": "Unknown device",
          "$ref": "errors.json#/errors/unavailable"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "errors.json#/errors/badrequest"
        }
      ]
    },

    "RemoteControl.1.delete": {
      "summary": "Key mapping actions.",
      "description": "Deletes the key code from map.",
      "tags": ["RemoteControl"],
      "params": {
        "type": "object",
        "properties": {
          "device": {
            "description": "Device name",
            "type": "string",
            "default": "DevInput"
          },
          "code": {
            "description": "Key code",
            "type": "number",
            "default": 1
          }
        }
      },
      "result": {
        "$ref": "result.json#/void"
      },
      "errors": [
        {
          "description": "Key does not exist",
          "$ref": "errors.json#/errors/unknownkey"
        },
        {
          "description": "Unknown device",
          "$ref": "errors.json#/errors/unavailable"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "errors.json#/errors/badrequest"
        }
      ]
    },

    "RemoteControl.1.modify": {
      "summary": "Key mapping actions.",
      "description": "Modifies the key code in the map.",
      "tags": ["RemoteControl"],
      "params": {
        "type": "object",
        "properties": {
          "$ref":"#/definitions/rcinfo"
        }
      },
      "result": {
        "$ref": "result.json#/void"
      },
      "errors": [
        {
          "description": "Unknown device",
          "$ref": "errors.json#/errors/unavailable"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "errors.json#/errors/badrequest"
        },
        {
          "description": "Key does not exist",
          "$ref": "errors.json#/errors/unknownkey"
        }
      ]
    },

    "RemoteControl.1.pair": {
      "summary": "Pairing device.",
      "description": "Activates pairing mode of specific device.",
      "tags": ["RemoteControl"],
      "params": {
        "type": "object",
        "properties": {
          "device": {
            "description": "Device name",
            "type": "string",
            "default": "DevInput"
          }
        }
      },
      "result": {
        "$ref": "result.json#/void"
      },
      "errors": [
        {
          "description": "Unknown device",
          "$ref": "errors.json#/errors/unavailable"
        },
        {
          "description": "Failed to activate pairing",
          "$ref": "errors.json#/errors/general"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "errors.json#/errors/badrequest"
        }
      ]
    },

    "RemoteControl.1.unpair": {
      "summary": "Pairing device.",
      "description": "Unpairs of specific device.",
      "tags": ["RemoteControl"],
      "params": {
        "type": "object",
        "properties": {
          "device": {
            "description": "Device name",
            "type": "string",
            "default": "DevInput"
          },
          "bindId": {
            "description": "Binding id",
            "type": "string",
            "default": "id"
          }
        }
      },
      "result": {
        "$ref": "result.json#/void"
      },
      "errors": [
        {
          "description": "Unknown device",
          "$ref": "errors.json#/errors/unavailable"
        },
        {
          "description": "Failed to unpair a specific device",
          "$ref": "errors.json#/errors/general"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "errors.json#/errors/badrequest"
        }
      ]
    },

    "RemoteControl.1.send": {
      "summary": "Key mapping actions.",
      "description": "Sends a code to a device.",
      "tags": ["RemoteControl"],
      "params": {
        "type": "object",
        "properties": {
          "$ref":"#/definitions/rcinfo"
        }
      },
      "result": {
        "$ref": "result.json#/void"
      },
      "errors": [
        {
          "description": "Unknown device",
          "$ref": "errors.json#/errors/unavailable"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "errors.json#/errors/badrequest"
        },
        {
          "description": "Key does not exist",
          "$ref": "errors.json#/errors/unknownkey"
        },
        {
          "description": "Key map table does not exist",
          "$ref": "errors.json#/errors/unknowntable"
        },
        {
          "description": "Key is already releases",
          "$ref": "errors.json#/errors/alreadyreleased"
        }
      ]
    },

    "RemoteControl.1.press": {
      "summary": "Key mapping actions.",
      "description": "Sends a code 'Press' to a device.",
      "tags": ["RemoteControl"],
      "params": {
        "type": "object",
        "properties": {
          "$ref":"#/definitions/rcinfo"
        }
      },
      "result": {
        "$ref": "result.json#/void"
      },
      "errors": [
        {
          "description": "Unknown device",
          "$ref": "errors.json#/errors/unavailable"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "errors.json#/errors/badrequest"
        },
        {
          "description": "Key does not exist",
          "$ref": "errors.json#/errors/unknownkey"
        },
        {
          "description": "Key map table does not exist",
          "$ref": "errors.json#/errors/unknowntable"
        },
        {
          "description": "Key is already releases",
          "$ref": "errors.json#/errors/alreadyreleased"
        }
      ]
    },    
    
    "RemoteControl.1.release": {
      "summary": "Key mapping actions.",
      "description": "Sends a code 'Release' to a device.",
      "tags": ["RemoteControl"],
      "params": {
        "type": "object",
        "properties": {
          "$ref":"#/definitions/rcinfo"
        }
      },
      "result": {
        "$ref": "result.json#/void"
      },
      "errors": [
        {
          "description": "Unknown device",
          "$ref": "errors.json#/errors/unavailable"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "errors.json#/errors/badrequest"
        },
        {
          "description": "Key does not exist",
          "$ref": "errors.json#/errors/unknownkey"
        },
        {
          "description": "Key map table does not exist",
          "$ref": "errors.json#/errors/unknowntable"
        },
        {
          "description": "Key is already releases",
          "$ref": "errors.json#/errors/alreadyreleased"
        }
      ]
    },

    "RemoteControl.1.save": {
      "summary": "Key mapping actions.",
      "description": "Saves the loaded key map as DEVICE_NAME.json into persistent path.",
      "tags": ["RemoteControl"],
      "params": {
        "type": "object",
        "properties": {
          "device": {
            "description": "Device name",
            "type": "string",
            "default": "DevInput"
          }
        }
      },
      "result": {
        "$ref": "result.json#/void"
      },
      "errors": [
        {
          "description": "Unknown device",
          "$ref": "errors.json#/errors/unavailable"
        },
        {
          "description": "File is not created",
          "$ref": "errors.json#/errors/general"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "errors.json#/errors/badrequest"
        },
        {
          "description": "Illegal state",
          "$ref": "errors.json#/errors/illegalstate"
        }
      ]
    },

    "RemoteControl.1.load": {
      "summary": "Key mapping actions.",
      "description": "Re-loads DEVICE_NAME.json key map into memory.",
      "tags": ["RemoteControl"],
      "params": {
        "type": "object",
        "properties": {
          "device": {
            "description": "Device name",
            "type": "string",
            "default": "DevInput"
          }
        }
      },
      "result": {
        "$ref": "result.json#/void"
      },
      "errors": [
        {
          "description": "Unknown device",
          "$ref": "errors.json#/errors/unavailable"
        },
        {
          "description": "File does not exist",
          "$ref": "errors.json#/errors/general"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "errors.json#/errors/badrequest"
        },
        {
          "description": "Illegal state",
          "$ref": "errors.json#/errors/illegalstate"
        },
        {
          "description": "Opening failed",
          "$ref": "errors.json#/errors/openfailed"
        }
      ]
    },

    "RemoteControl.1.add": {
      "summary": "Key mapping actions.",
      "description": "Adds the key code in the map.",
      "tags": ["RemoteControl"],
      "params": {
        "type": "object",
        "properties": {
          "$ref":"#/definitions/rcinfo"
        }
      },
      "result": {
        "$ref": "result.json#/void"
      },
      "errors": [
        {
          "description": "Unknown device",
          "$ref": "errors.json#/errors/unavailable"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "errors.json#/errors/badrequest"
        },
        {
          "description": "Code already exists",
          "$ref": "errors.json#/errors/unknownkey"
        }
      ]
    }
  }
}
