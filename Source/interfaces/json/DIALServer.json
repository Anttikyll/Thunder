{
  "$schema": "interface.schema.json",
  "jsonrpc": "2.0",
  "info": {
    "title": "DIAL Server API",
    "class": "DIALServer",
    "description": "DIAL Server JSON-RPC interface"
  },
  "common": {
    "$ref": "common.json"
  },
  "events": {
    "start": {
      "summary": "Signals that application start was requested over DIAL *(passive mode only)*",
      "params": {
        "type": "object",
        "properties": {
          "application": {
            "description": "Application name",
            "type": "string",
            "example": "YouTube"
          },
          "parameters": {
            "description": "URL and DIAL parameters to pass to the application",
            "type": "string",
            "example": "youtube.com/tv"
          },
          "payload": {
            "description": "Additional application-specific payload data to pass to the application",
            "type": "string",
            "example": "v=zpp045FBbQY"
          }
        },
        "required": [
          "application"
        ]
      }
    },
    "stop": {
      "summary": "Signals that application stop was requested over DIAL *(passive mode only)*",
      "params": {
        "type": "object",
        "properties": {
          "application": {
            "description": "Application name",
            "type": "string",
            "example": "YouTube"
          },
          "parameters": {
            "description": "URL and DIAL parameters to pass to the application",
            "type": "string"
          },
          "payload": {
            "description": "Additional application-specific payload data to pass to the application",
            "type": "string"
          }
        },
        "required": [
          "application"
        ]
      }
    }
  }
}
