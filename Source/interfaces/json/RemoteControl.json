{
  "$schema": "interface.schema.json",
  "jsonrpc": "2.0",
  "info": {
    "title": "Remote Control API",
    "class": "RemoteControl",
    "description": "RemoteControl JSON-RPC interface"
  },
  "common": {
    "$ref": "common.json"
  },
  "definitions": {
    "key":{
        "type": "object",
        "properties": {
        "device": {
          "description": "Device name",
          "type": "string",
          "default": "DevInput"
        },
        "code": {
          "description": "Key code",
          "type": "number",
          "default": 1
        }
      },
      "required": [
        "device",
        "code"
      ]    
    },
    "modifiers": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "leftshift",
          "rightshift",
          "leftalt",
          "rightalt",
          "leftctrl",
          "rightctrl"
        ],
        "enumvalues": [
          1,
          2,
          4,
          8,
          16,
          32
        ],
        "enumtyped": false,
        "description": "Key modifiers",
        "default": "leftshift"
      }
    }, 
    "rcinfo": {
      "type": "object",
      "properties": {
        "device": {
          "description": "Device name",
          "type": "string",
          "default": "DevInput"
        },
        "code": {
          "description": "Key code",
          "type": "number",
          "default": 1
        },
        "key": {
          "description": "Key ingest code",
          "type": "number",
          "size": 16,
          "default": 103
        },
        "modifiers": {
          "$ref": "#/definitions/modifiers"
        }
      },
      "required": [
        "device",
        "code",
        "key",
        "modifiers"
      ]
    },
    "device": {
      "type": "object",
      "properties": {
        "device": {
          "description": "Device name",
          "type": "string",
          "default": "DevInput"
        }
      }
    }    
  },
  "properties": {
    "devices": {
      "summary": "Names of all available devices",
      "readonly": true,
      "params": {
        "type": "array",
        "items": {
          "type": "string",
          "description": "Available device name",
          "default": "Web"
        }
      }
    },
    "device": {
      "summary": "Metadata of specific devices",
      "readonly": true,
      "params": {
        "type": "object",
        "properties": {
          "name": {
            "description": "Device name",
            "type": "string",
            "default": "DevInput"
          },
          "metadata": {
            "description": "Device metadata",
            "type": "string",
            "default": "It is based on protocol A"
          }
        },
        "required": [
          "name",
          "metadata"
        ]
      },
      "index": {
        "name": "Device name",
        "example": "0"
      },
      "errors": [
        {
          "description": "Virtual device is loaded",
          "$ref": "#/common/errors/general"
        },
        {
          "description": "Unknown device",
          "$ref": "#/common/errors/unavailable"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "#/common/errors/badrequest"
        }
      ]
    }
  },
  "methods": {
    "key": {
      "summary": "Gets key code details",
      "params": {
        "$ref": "#/definitions/key"
      },
      "result": {
        "type": "object",
        "properties": {
          "code": {
            "description": "Key code",
            "type": "number",
            "default": 1
          },
          "key": {
            "description": "Key ingest code",
            "type": "number",
            "size": 16,
            "default": 103
          },
          "modifiers": {
            "$ref": "#/definitions/modifiers"
          }
        },
        "required": [
          "code",
          "key",
          "modifiers"
        ]
      },
      "errors": [
        {
          "description": "Key does not exist",
          "$ref": "#/common/errors/unknownkey"
        },
        {
          "description": "Unknown device",
          "$ref": "#/common/errors/unavailable"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "#/common/errors/badrequest"
        }
      ]
    },
    "delete": {
      "summary": "Deletes the key code from map.",
      "params": {
        "$ref": "#/definitions/key"
      },
      "result": {
        "$ref": "#/common/results/void"
      },
      "errors": [
        {
          "description": "Key does not exist",
          "$ref": "#/common/errors/unknownkey"
        },
        {
          "description": "Unknown device",
          "$ref": "#/common/errors/unavailable"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "#/common/errors/badrequest"
        }
      ]
    },
    "modify": {
      "summary": "Modifies the key code in the map.",
      "params": {
        "$ref": "#/definitions/rcinfo"
      },
      "result": {
        "$ref": "#/common/results/void"
      },
      "errors": [
        {
          "description": "Unknown device",
          "$ref": "#/common/errors/unavailable"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "#/common/errors/badrequest"
        },
        {
          "description": "Key does not exist",
          "$ref": "#/common/errors/unknownkey"
        }
      ]
    },
    "pair": {
      "summary": "Activates pairing mode of specific device.",
      "params": {
        "$ref": "#/definitions/device"
      },
      "result": {
        "$ref": "#/common/results/void"
      },
      "errors": [
        {
          "description": "Unknown device",
          "$ref": "#/common/errors/unavailable"
        },
        {
          "description": "Failed to activate pairing",
          "$ref": "#/common/errors/general"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "#/common/errors/badrequest"
        }
      ]
    },
    "unpair": {
      "summary": "Unpairs of specific device.",
      "params": {
        "type": "object",
        "properties": {
          "device": {
            "description": "Device name",
            "type": "string",
            "default": "DevInput"
          },
          "bindid": {
            "description": "Binding id",
            "type": "string",
            "default": "id"
          }
        },
        "required": [
          "device",
          "bindid"
        ]
      },
      "result": {
        "$ref": "#/common/results/void"
      },
      "errors": [
        {
          "description": "Unknown device",
          "$ref": "#/common/errors/unavailable"
        },
        {
          "description": "Failed to unpair a specific device",
          "$ref": "#/common/errors/general"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "#/common/errors/badrequest"
        }
      ]
    },
    "send": {
      "summary": "Sends a code to a device.",
      "params": {
        "$ref": "#/definitions/rcinfo"
      },
      "result": {
        "$ref": "#/common/results/void"
      },
      "errors": [
        {
          "description": "Unknown device",
          "$ref": "#/common/errors/unavailable"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "#/common/errors/badrequest"
        },
        {
          "description": "Key does not exist",
          "$ref": "#/common/errors/unknownkey"
        },
        {
          "description": "Key map table does not exist",
          "$ref": "#/common/errors/unknowntable"
        },
        {
          "description": "Key is already releases",
          "$ref": "#/common/errors/alreadyreleased"
        }
      ]
    },
    "press": {
      "summary": "Sends a code 'Press' to a device.",
      "params": {
        "$ref": "#/definitions/rcinfo"
      },
      "result": {
        "$ref": "#/common/results/void"
      },
      "errors": [
        {
          "description": "Unknown device",
          "$ref": "#/common/errors/unavailable"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "#/common/errors/badrequest"
        },
        {
          "description": "Key does not exist",
          "$ref": "#/common/errors/unknownkey"
        },
        {
          "description": "Key map table does not exist",
          "$ref": "#/common/errors/unknowntable"
        },
        {
          "description": "Key is already releases",
          "$ref": "#/common/errors/alreadyreleased"
        }
      ]
    },
    "release": {
      "summary": "Sends a code 'Release' to a device.",
      "params": {
        "$ref": "#/definitions/rcinfo"
      },
      "result": {
        "$ref": "#/common/results/void"
      },
      "errors": [
        {
          "description": "Unknown device",
          "$ref": "#/common/errors/unavailable"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "#/common/errors/badrequest"
        },
        {
          "description": "Key does not exist",
          "$ref": "#/common/errors/unknownkey"
        },
        {
          "description": "Key map table does not exist",
          "$ref": "#/common/errors/unknowntable"
        },
        {
          "description": "Key is already releases",
          "$ref": "#/common/errors/alreadyreleased"
        }
      ]
    },
    "save": {
      "summary": "Saves the loaded key map as DEVICE_NAME.json into persistent path.",
      "params": {
        "$ref": "#/definitions/device"
      },
      "result": {
        "$ref": "#/common/results/void"
      },
      "errors": [
        {
          "description": "Unknown device",
          "$ref": "#/common/errors/unavailable"
        },
        {
          "description": "File is not created",
          "$ref": "#/common/errors/general"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "#/common/errors/badrequest"
        },
        {
          "description": "Illegal state",
          "$ref": "#/common/errors/illegalstate"
        }
      ]
    },
    "load": {
      "summary": "Re-loads DEVICE_NAME.json key map into memory.",
      "params": {
        "$ref": "#/definitions/device"
      },
      "result": {
        "$ref": "#/common/results/void"
      },
      "errors": [
        {
          "description": "Unknown device",
          "$ref": "#/common/errors/unavailable"
        },
        {
          "description": "File does not exist",
          "$ref": "#/common/errors/general"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "#/common/errors/badrequest"
        },
        {
          "description": "Illegal state",
          "$ref": "#/common/errors/illegalstate"
        },
        {
          "description": "Opening failed",
          "$ref": "#/common/errors/openingfailed"
        }
      ]
    },
    "add": {
      "summary": "Adds the key code in the map.",
      "params": {
        "$ref": "#/definitions/rcinfo"
      },
      "result": {
        "$ref": "#/common/results/void"
      },
      "errors": [
        {
          "description": "Unknown device",
          "$ref": "#/common/errors/unavailable"
        },
        {
          "description": "Bad JSON param data format",
          "$ref": "#/common/errors/badrequest"
        },
        {
          "description": "Code already exists",
          "$ref": "#/common/errors/unknownkey"
        }
      ]
    }
  }
}
