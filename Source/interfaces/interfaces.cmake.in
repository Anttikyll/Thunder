# Try to find all dependencies to build proprietary plugins
# Once done this will be defined:
#  INTERFACES_SUPPORT_FOUND        - System has support to build Proprietary Plugins
#  INTERFACES_SUPPORT_DEFINITIONS  - Definitions required to do a proper compile
#  INTERFACES_SUPPORT_INCLUDE_DIRS - The include directories
#  INTERFACES_SUPPORT_LIBRARIES    - The libraries needed
#  INTERFACES_SUPPORT_LIBRARY_DIR  - The libraries needed
# 
# Input: INTERFACES_SUPPORT_VERSION

find_package(PkgConfig)
pkg_check_modules(PC_CORE_SUPPORT @NAMESPACE@Core)
pkg_check_modules(PC_INTERFACES_SUPPORT @NAMESPACE@Plugins)

if(PC_CORE_SUPPORT_FOUND AND PC_INTERFACES_SUPPORT_FOUND)
    if(INTERFACES_SUPPORT_VERSION AND PC_INTERFACES_SUPPORT_VERSION)
        if ("${INTERFACES_SUPPORT_VERSION}" VERSION_GREATER "${PC_INTERFACES_SUPPORT_VERSION}")
            message(WARNING "Incorrect version, found ${PC_INTERFACES_SUPPORT_VERSION}, need at least ${INTERFACES_SUPPORT_VERSION}, please install correct version ${WPEFRAMEWORKPLUGINS_FIND_VERSION}")
            set(INTERFACES_SUPPORT_FOUND_TEXT "Found incorrect version")
            unset(PC_INTERFACES_SUPPORT_FOUND)
        endif()
    endif()
else()
    set(INTERFACES_SUPPORT_FOUND_TEXT "Not found")
endif()

if(PC_CORE_SUPPORT_FOUND AND PC_INTERFACES_SUPPORT_FOUND)
    set(INTERFACES_SUPPORT_DEFINITIONS "${PC_CORE_SUPPORT_CFLAGS_OTHER};${PC_INTERFACES_SUPPORT_CFLAGS_OTHER}")
    set(INTERFACES_SUPPORT_INCLUDE_DIR "${PC_CORE_SUPPORT_INCUDE_DIRS};${PC_INTERFACES_SUPPORT_INCLUDE_DIRS}")
    set(INTERFACES_SUPPORT_LIBRARIES   "${PC_CORE_SUPPORT_LIBRARIES};${PC_INTERFACES_SUPPORT_LIBRARIES}")
    set(INTERFACES_SUPPORT_LIBRARY_DIR "${PC_CORE_SUPPORT_LIBRARY_DIRS};${PC_INTERFACES_SUPPORT_LIBRARY_DIRS}")
endif()

include(FindPackageHandleStandardArgs)
find_package_handle_standard_args(INTERFACES_SUPPORT DEFAULT_MSG
    INTERFACES_SUPPORT_LIBRARIES  INTERFACES_SUPPORT_INCLUDE_DIR)

mark_as_advanced(INTERFACES_SUPPORT_DEFINITIONS INTERFACES_SUPPORT_INCLUDE_DIR INTERFACES_SUPPORT_LIBRARIES INTERFACES_SUPPORT_LIBRARY_DIR)
